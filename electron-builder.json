{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.payrollao.app",
  "productName": "PayrollAO",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/pwa-192x192.png",
    "public/pwa-512x512.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/pwa-512x512.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/pwa-512x512.png",
    "uninstallerIcon": "public/pwa-512x512.png",
    "installerHeaderIcon": "public/pwa-512x512.png",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "PayrollAO"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/pwa-512x512.png",
    "category": "Office"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/pwa-512x512.png",
    "category": "public.app-category.business"
  }
}
